{% comment %}
  Section: Dynamic Review Slider
  Description: Swiper JS slider with custom blocks for reviews
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
  #shopify-section-{{ section.id }} .product-reviews-block {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    overflow: hidden; /* Prevent horizontal scrollbar */
  }

  /* Container wrapper */
  #shopify-section-{{ section.id }} .product-reviews-wrapper {
    max-width: {{ section.settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  /* Card Styling */
  #shopify-section-{{ section.id }} .product-reviews-item {
    background-color: {{ section.settings.card_bg_color }};
    border-radius: {{ section.settings.card_radius }}px;
    padding: 20px;
    height: auto;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    border: 1px solid {{ section.settings.card_border_color }};
  }

  /* Text Styling */
  #shopify-section-{{ section.id }} .product-reviews-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: bold;
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  #shopify-section-{{ section.id }} .product-reviews-text p {
    color: {{ section.settings.body_text_color }};
    font-size: {{ section.settings.body_font_size }}px;
    line-height: 1.5;
    margin: 0 0 10px 0;
  }

  #shopify-section-{{ section.id }} .product-reviews-author {
    color: {{ section.settings.author_color }};
    font-size: {{ section.settings.author_font_size }}px;
    font-weight: 600;
    margin-top: auto; /* Push to bottom */
  }

  /* Bottom Section Text */
  #shopify-section-{{ section.id }} .product-reviews-bottom-text p {
    color: {{ section.settings.bottom_text_color }};
    font-size: {{ section.settings.bottom_font_size }}px;
    margin: 0;
  }

  /* Navigation Buttons */
  .review-nav-buttons-{{ section.id }} button {
    color: {{ section.settings.nav_color }};
    border: 1px solid {{ section.settings.nav_color }};
    background: transparent;
    border-radius: 50%; 
    width: 40px; 
    height: 40px; 
    cursor: pointer; 
    display: flex; 
    align-items: center; 
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .review-nav-buttons-{{ section.id }} button:hover {
    background: {{ section.settings.nav_color }};
    color: {{ section.settings.card_bg_color }};
  }
  
  .review-nav-buttons-{{ section.id }} button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

<div class="product-reviews-block">
  <div class="product-reviews-wrapper">
    
    {% comment %} Header / Navigation Area {% endcomment %}
    {% if section.settings.show_nav_arrows %}
      <div class="review-nav-buttons review-nav-buttons-{{ section.id }}" style="display: flex; justify-content: flex-end; gap: 10px; margin-bottom: 20px;">
        <button class="review-btn-prev review-btn-prev-{{ section.id }}" aria-label="Previous slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
        </button>
        <button class="review-btn-next review-btn-next-{{ section.id }}" aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
        </button>
      </div>
    {% endif %}

    <div class="swiper product-reviews-slider-{{ section.id }}">
      <div class="swiper-wrapper">
        
        {%- for block in section.blocks -%}
          <div class="swiper-slide product-reviews-item" {{ block.shopify_attributes }}>
            <div class="product-reviews-review">
              
              <div class="product-reviews-stars" style="display: flex; gap: 2px; margin-bottom: 10px;">
                {%- assign rating = block.settings.rating -%}
                {%- for star in (1..5) -%}
                  <svg width="20" height="20" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect width="32" height="32" fill="{% if star <= rating %}{{ section.settings.star_color }}{% else %}#e0e0e0{% endif %}"></rect>
                    <g clip-path="url(#clip0_{{ section.id }}_{{ block.id }}_{{ star }})">
                      <path d="M9.20283 27L16.001 21.807L22.7972 27L20.2018 18.596L27 13.403H18.5984L16.001 5L13.4037 13.403H5L11.7982 18.596L9.20283 27Z" fill="{{ section.settings.card_bg_color }}"></path>
                    </g>
                    <defs>
                      <clipPath id="clip0_{{ section.id }}_{{ block.id }}_{{ star }}">
                        <rect width="22" height="22" fill="#ffffff" transform="translate(5 5)"></rect>
                      </clipPath>
                    </defs>
                  </svg>
                {%- endfor -%}
              </div>

              {%- if block.settings.title != blank -%}
                <h2 class="product-reviews-title">{{ block.settings.title }}</h2>
              {%- endif -%}

              <div class="product-reviews-text">
                <p>{{ block.settings.text }}</p>
              </div>

              <div class="product-reviews-publication">
                <p class="product-reviews-author">{{ block.settings.author }}</p>
              </div>
            </div>
          </div>
        {%- endfor -%}

      </div>
    </div>
    
    {% if section.settings.bottom_text != blank %}
      <div class="product-reviews-bottom-text" style="text-align: center; margin-top: 15px;">
        <p>{{ section.settings.bottom_text }}</p>
      </div>
    {% endif %}
    
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.product-reviews-slider-{{ section.id }}', {
      slidesPerView: {{ section.settings.slides_mobile }},
      spaceBetween: 16,
      loop: false,
      navigation: {
        nextEl: '.review-btn-next-{{ section.id }}',
        prevEl: '.review-btn-prev-{{ section.id }}',
      },
      breakpoints: {
        768: { slidesPerView: {{ section.settings.slides_tablet }} },
        1024: { slidesPerView: {{ section.settings.slides_desktop }} }
      }
    });
  });
</script>

