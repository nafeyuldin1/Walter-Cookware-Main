{% comment %}
  Section: Materials Comparison Tabs (Fixed with Swiper for Smooth Mobile Experience)
{% endcomment %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

{%- style -%}
  #shopify-section-{{ section.id }} .materials {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .materials__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding-top: {{ section.settings.pt_d }}px;
    padding-bottom: {{ section.settings.pb_d }}px;
    padding-left: {{ section.settings.pad_x_d }}px;
    padding-right: {{ section.settings.pad_x_d }}px;
  }

  /* Typography */
  #shopify-section-{{ section.id }} .materials__title {
    margin: 0 0 16px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size_d }}px;
    font-weight: 400;
    line-height: 1.3;
    text-transform: capitalize;
  }

  #shopify-section-{{ section.id }} .materials__sub {
    margin: 0 0 48px;
    color: {{ section.settings.sub_color }};
    font-size: {{ section.settings.sub_size_d }}px;
    line-height: 1.5;
  }

  /* Tabs Navigation */
  #shopify-section-{{ section.id }} .materials__tabs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    border: 1.5px solid {{ section.settings.border_color }};
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 48px;
    max-width: 800px; /* Limit width for better aesthetics */
  }

  #shopify-section-{{ section.id }} .materials__tab {
    appearance: none;
    color: {{ section.settings.tab_text_color }};
    background: {{ section.settings.bg_color }};
    border: 0;
    padding: 14px 12px;
    cursor: pointer;
    border-right: 1.5px solid {{ section.settings.border_color }};
    font-size: 20px;
    font-weight: 500;
    text-transform: capitalize;
    transition: background 0.3s, color 0.3s;
  }

  #shopify-section-{{ section.id }} .materials__tab:last-child {
    border-right: 0;
  }

  #shopify-section-{{ section.id }} .materials__tab.is-active {
    background: {{ section.settings.tab_active_bg }};
    color: {{ section.settings.tab_active_text }};
  }

  /* SWIPER CONTAINER STYLES */
  #shopify-section-{{ section.id }} .swiper {
    width: 100%;
    height: 100%;
    overflow: visible; /* Allows shadows/badges to not be cut off */
  }
  
  #shopify-section-{{ section.id }} .swiper-wrapper {
    align-items: stretch; /* Ensure equal height */
  }

  #shopify-section-{{ section.id }} .swiper-slide {
    height: auto;
    display: flex;
    box-sizing: border-box;
  }

  /* Cards Styling */
  #shopify-section-{{ section.id }} .comp-card {
    border-radius: 24px;
    border: 1.5px solid {{ section.settings.card_border }};
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background: {{ section.settings.card_bg }};
  }

  #shopify-section-{{ section.id }} .comp-card__media {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
  }

  #shopify-section-{{ section.id }} .comp-card__media img {
    object-fit: cover;
    display: block;
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .mat-top-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 2;
    padding: 6px 10px;
    border-radius: 6px;
    background: {{ section.settings.badge_bg }};
    color: {{ section.settings.badge_text }};
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  #shopify-section-{{ section.id }} .comp-card__body {
    padding: 24px;
    border-top: 1.5px solid {{ section.settings.card_border }};
    flex-grow: 1;
  }

  #shopify-section-{{ section.id }} .comp-card__title {
    margin: 0 0 12px;
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: 500;
    line-height: 1.4;
  }

  #shopify-section-{{ section.id }} .comp-card__text {
    margin: 0;
    color: {{ section.settings.card_body_color }};
    font-size: {{ section.settings.card_body_size }}px;
    line-height: 1.5;
  }

  /* =========================================
     Responsive Mobile
     ========================================= */
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .materials__inner {
      padding-top: {{ section.settings.pt_m }}px;
      padding-bottom: {{ section.settings.pb_m }}px;
      /* Remove side padding on container so slider goes edge-to-edge */
      padding-left: 0;
      padding-right: 0;
    }

    #shopify-section-{{ section.id }} .materials__header {
      padding-left: {{ section.settings.pad_x_m }}px;
      padding-right: {{ section.settings.pad_x_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__title {
      font-size: {{ section.settings.heading_size_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__sub {
      font-size: {{ section.settings.sub_size_m }}px;
    }

    #shopify-section-{{ section.id }} .materials__tabs {
      grid-template-columns: 1fr 1fr;
      margin-left: {{ section.settings.pad_x_m }}px;
      margin-right: {{ section.settings.pad_x_m }}px;
    }
    
    #shopify-section-{{ section.id }} .materials__tab {
      font-size: 14px;
      padding: 12px 8px;
      border-right: 1.5px solid {{ section.settings.border_color }};
      border-bottom: 1.5px solid {{ section.settings.border_color }};
    }
    
    #shopify-section-{{ section.id }} .materials__tab:nth-child(2n) {
       border-right: 0;
    }
    #shopify-section-{{ section.id }} .materials__tab:nth-last-child(-n+2) {
       border-bottom: 0;
    }

    /* CARD WIDTH FIX FOR MOBILE */
    #shopify-section-{{ section.id }} .swiper-slide {
      width: 260px; /* Fixed width for peek effect */
      /* No margin needed here, Swiper spaceBetween handles it */
    }
  }
{%- endstyle -%}

<section id="materials-sec-{{ section.id }}" class="materials">
  <div class="materials__inner">

    <header class="materials__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="materials__title">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subtext != blank -%}
        <p class="materials__sub">{{ section.settings.subtext }}</p>
      {%- endif -%}
    </header>

    <div class="materials__tabs-wrap">
      <nav class="materials__tabs" role="tablist">
        {%- for block in section.blocks -%}
          {%- if block.type == 'category' -%}
            <button class="materials__tab {% if forloop.first %}is-active{% endif %}" 
                    data-cat="{{ block.settings.cat_id }}" 
                    role="tab" 
                    aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                    {{ block.shopify_attributes }}>
              {{ block.settings.title }}
            </button>
          {%- endif -%}
        {%- endfor -%}
      </nav>
    </div>

    <div class="swiper js-materials-swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        </div>
      </div>

    <div id="materials-storage-{{ section.id }}" style="display:none;">
      {%- for block in section.blocks -%}
        {%- if block.type == 'card' -%}
          <div class="swiper-slide" data-cat="{{ block.settings.cat_id }}">
            <article class="comp-card" {{ block.shopify_attributes }}>
              <div class="comp-card__media">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag }}
                {%- endif -%}
                
                {%- if block.settings.badge_text != blank -%}
                  <span class="mat-top-badge" 
                        style="background:{{ block.settings.badge_bg | default: section.settings.badge_bg }}; color:{{ block.settings.badge_text_color | default: section.settings.badge_text }}">
                    {{ block.settings.badge_text }}
                  </span>
                {%- endif -%}
              </div>

              <div class="comp-card__body">
                {%- if block.settings.title != blank -%}
                  <h3 class="comp-card__title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="comp-card__text">{{ block.settings.text }}</p>
                {%- endif -%}
              </div>
            </article>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function(){
  var SECTION_ID = "{{ section.id }}";
  var containerId = '#materials-sec-' + SECTION_ID;
  var swiperClass = '.js-materials-swiper-' + SECTION_ID;
  var storageId = '#materials-storage-' + SECTION_ID;
  
  var swiperInstance = null;
  var colsDesktop = {{ section.settings.cols_desktop }};
  
  // Select DOM elements
  var $wrap = document.querySelector(containerId);
  var $swiperEl = $wrap.querySelector(swiperClass);
  var $swiperWrapper = $swiperEl.querySelector('.swiper-wrapper');
  var $storage = document.querySelector(storageId);
  var $tabs = $wrap.querySelectorAll('.materials__tab');

  // Initial active category
  var activeCat = $tabs.length > 0 ? $tabs[0].getAttribute('data-cat') : 'cat1';

  function initSwiper() {
    if (swiperInstance) swiperInstance.destroy(true, true);

    swiperInstance = new Swiper(swiperEl, {
      slidesPerView: 'auto', // Allows fixed width on mobile
      spaceBetween: 16,      // Gap between cards
      grabCursor: true,
      observer: true,
      observeParents: true,
      slidesOffsetBefore: 0, // Reset for desktop
      slidesOffsetAfter: 0,
      breakpoints: {
        // Mobile Settings
        320: {
          slidesPerView: 'auto', // Must be auto for fixed width slides
          spaceBetween: 16,
          // This creates the left padding effect without breaking the swipe flow
          slidesOffsetBefore: {{ section.settings.pad_x_m }}, 
          slidesOffsetAfter: {{ section.settings.pad_x_m }} 
        },
        // Desktop Settings
        769: {
          slidesPerView: colsDesktop,
          spaceBetween: 24,
          slidesOffsetBefore: 0,
          slidesOffsetAfter: 0
        }
      }
    });
  }

  function filterSlides(catId) {
    // 1. Clear current slides
    $swiperWrapper.innerHTML = '';
    
    // 2. Get matching slides from hidden storage
    var allSlides = $storage.querySelectorAll('.swiper-slide');
    var hasSlides = false;
    
    allSlides.forEach(function(slide) {
      if (slide.getAttribute('data-cat') === catId) {
        // Clone slide to avoid removing from storage
        var clone = slide.cloneNode(true);
        $swiperWrapper.appendChild(clone);
        hasSlides = true;
      }
    });

    // 3. Re-initialize Swiper
    initSwiper();
  }

  function setActiveTab(catId) {
    $tabs.forEach(function(btn) {
      if(btn.getAttribute('data-cat') === catId) {
        btn.classList.add('is-active');
        btn.setAttribute('aria-selected', 'true');
      } else {
        btn.classList.remove('is-active');
        btn.setAttribute('aria-selected', 'false');
      }
    });
  }

  // Initialize on Load
  filterSlides(activeCat);

  // Tab Click Events
  $tabs.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var cat = this.getAttribute('data-cat');
      if (cat === activeCat) return; // Ignore if already active
      
      activeCat = cat;
      setActiveTab(cat);
      filterSlides(cat);
    });
  });

  // Handle Shopify Editor Events (Re-init on changes)
  document.addEventListener('shopify:section:load', function(e) {
    if (e.detail.sectionId === SECTION_ID) {
       // Re-select elements as DOM refreshed
       $wrap = document.querySelector(containerId);
       $swiperEl = $wrap.querySelector(swiperClass);
       $swiperWrapper = $swiperEl.querySelector('.swiper-wrapper');
       $storage = document.querySelector(storageId);
       $tabs = $wrap.querySelectorAll('.materials__tab');
       
       var firstCat = $tabs.length > 0 ? $tabs[0].getAttribute('data-cat') : 'cat1';
       filterSlides(firstCat);
    }
  });
});
</script>

