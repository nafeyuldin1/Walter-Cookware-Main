{% schema %}
{
  "name": "Engineered Layers",
  "settings": [
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#07231b"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#BCA588"
    },
    {
      "type": "color",
      "id": "line_color",
      "label": "Line Color",
      "default": "#A3835F"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Layer Title Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Layer Description Color",
      "default": "#B0B0B0"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Engineered From The Inside Out"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "layer",
      "name": "Layer",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Layer Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Layer Name"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "Layer details here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Engineered Layers",
      "blocks": [
        {
          "type": "layer",
          "settings": {
            "title": "Pure Titanium With SlipScale Technology",
            "desc": "Non-toxic. Non-stick."
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Third Recycled Aluminum Core",
            "desc": "Pushes heat out evenly to all edges"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Second Recycled Aluminum Core",
            "desc": "Stabilizes internal heat"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "First Recycled Aluminum Core",
            "desc": "Pulls heat in fast"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Induction-Ready Stainless Steel",
            "desc": "Adds durability & magnetic conductivity"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="ieo-template--{{ section.id }}" class="ieo">
  <div class="ieo-inner">
    {% if section.settings.heading != blank %}
      <h2 class="ieo-title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="ieo-layout">
      
      <div class="ieo-visual">
        {% for block in section.blocks %}
          
          {% assign i = forloop.index0 %}
          {% assign z = 100 | minus: i %}

          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 1000 }}" 
              class="ieo-layer {% if forloop.first %}ieo-pan{% endif %}" 
              style="--i: {{ i }}; z-index: {{ z }};"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              width="600"
              height="auto"
            >
          {% else %}
             <div class="ieo-layer placeholder-layer" 
                  style="--i: {{ i }}; z-index: {{ z }}; background: #4a4a4a;">
             </div>
          {% endif %}

        {% endfor %}
      </div>

      <div class="ieo-right">
        <ul class="ieo-list">
          {% for block in section.blocks %}
            <li class="ieo-li" style="--i: {{ forloop.index0 }};" {{ block.shopify_attributes }}>
              <span class="ieo-line"></span>
              <div class="ieo-text">
                {% if block.settings.title != blank %}
                  <div class="ieo-li-title">{{ block.settings.title }}</div>
                {% endif %}
                
                {% if block.settings.desc != blank %}
                  <div class="ieo-li-desc">{{ block.settings.desc }}</div>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>
  </div>
</section>

<style>
  /* --- GLOBAL VARIABLES --- */
  #ieo-template--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    --heading-color: {{ section.settings.heading_color }};
    --line-color: {{ section.settings.line_color }};
    --title-color: {{ section.settings.title_color }};
    --desc-color: {{ section.settings.desc_color }};
    --pt: {{ section.settings.padding_top }}px;
    --pb: {{ section.settings.padding_bottom }}px;
    
    /* THE MAGIC SPACERS - Change these to adjust spread */
    --step-d: 130px; /* Desktop Vertical Gap */
    --step-m: 80px;  /* Mobile Vertical Gap */
  }

  #ieo-template--{{ section.id }}.ieo {
    color: #fff;
    overflow: hidden;
    position: relative;
  }

  #ieo-template--{{ section.id }} .ieo-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--pt) 24px var(--pb) 24px;
  }

  #ieo-template--{{ section.id }} .ieo-title {
    margin: 0 0 60px;
    font-family: 'Neue Montreal', sans-serif;
    color: var(--heading-color);
    font-size: 48px;
    font-weight: 400;
    line-height: 1.3;
    letter-spacing: 1.92px;
    text-transform: capitalize;
    text-align: center;
  }

  /* --- LAYOUT GRID --- */
  #ieo-template--{{ section.id }} .ieo-layout {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Default Desktop Split */
    gap: 40px;
    align-items: flex-start;
    position: relative;
  }

  /* --- IMAGES (VISUAL STACK) --- */
  #ieo-template--{{ section.id }} .ieo-visual {
    position: relative;
    width: 100%;
    /* Calculated height to ensure container fits all layers */
    min-height: 800px; 
    display: flex;
    justify-content: center; /* Center horizontally on desktop */
  }

  #ieo-template--{{ section.id }} .ieo-layer {
    position: absolute;
    width: 80%;
    max-width: 500px;
    height: auto;
    display: block;
    opacity: 0;
    top: 0;
    
    /* Animation Initial State */
    transform: translateY(0px) scale(0.9);
    transition: transform 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.8s ease;
    will-change: transform, opacity;
    filter: drop-shadow(0 15px 25px rgba(0, 0, 0, 0.5));
    transition-delay: calc(var(--i) * 150ms);
  }

  /* Active State (Desktop) */
  #ieo-template--{{ section.id }} .ieo-layer.is-on {
    opacity: 1;
    /* Move down based on index * desktop step */
    transform: translateY(calc(var(--i) * var(--step-d))) scale(1);
  }

  /* Special handling for top pan */
  #ieo-template--{{ section.id }} .ieo-pan {
    top: -40px; /* Slight offset up */
  }

  /* Placeholder for empty blocks */
  #ieo-template--{{ section.id }} .placeholder-layer {
    height: 60px;
    border-radius: 50%;
  }

  /* --- TEXT LIST --- */
  #ieo-template--{{ section.id }} .ieo-right {
    position: relative;
    padding-top: 20px; /* Initial offset to align 1st text with 1st image */
  }

  #ieo-template--{{ section.id }} .ieo-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    /* Use the SAME variable as image offset to guarantee alignment */
    gap: var(--step-d); 
  }

  #ieo-template--{{ section.id }} .ieo-li {
    display: flex;
    align-items: center;
    gap: 20px;
    opacity: 0;
    transform: translateX(30px);
    transition: transform 0.8s ease, opacity 0.8s ease;
    transition-delay: calc(var(--i) * 150ms);
    position: relative;
    height: 0; /* Important: Removes natural height, lets GAP define spacing */
    min-height: 0;
    overflow: visible; /* Allows text to show */
  }

  #ieo-template--{{ section.id }} .ieo-li.is-on {
    opacity: 1;
    transform: translateX(0);
  }

  #ieo-template--{{ section.id }} .ieo-line {
    background: var(--line-color);
    height: 1px;
    width: 80px;
    flex-shrink: 0;
    display: block;
  }

  #ieo-template--{{ section.id }} .ieo-text {
    /* Since parent height is 0, we position absolute or let it flow relative */
    position: relative;
    top: -1em; /* Adjust vertical centering */
  }

  #ieo-template--{{ section.id }} .ieo-li-title {
    font-family: 'Neue Montreal', sans-serif;
    color: var(--title-color);
    font-size: 24px;
    font-weight: 500;
    line-height: 1.3;
    text-transform: capitalize;
    white-space: nowrap; /* Prevent wrapping if possible on desktop */
  }

  #ieo-template--{{ section.id }} .ieo-li-desc {
    margin-top: 6px;
    font-family: 'Neue Montreal', sans-serif;
    color: var(--desc-color);
    font-size: 16px;
    line-height: 1.4;
  }

  /* =========================================
     MOBILE STYLES (THE FIX)
     ========================================= */
  @media (max-width: 900px) {
    #ieo-template--{{ section.id }} .ieo-inner {
      padding: 40px 16px;
    }

    #ieo-template--{{ section.id }} .ieo-title {
      font-size: 28px;
      margin-bottom: 40px;
    }

    /* FORCE SIDE BY SIDE LAYOUT */
    #ieo-template--{{ section.id }} .ieo-layout {
      grid-template-columns: 45% 55%; /* Fixed ratio: Images Left, Text Right */
      gap: 10px;
      align-items: flex-start;
    }

    /* Image Column */
    #ieo-template--{{ section.id }} .ieo-visual {
      min-height: 550px; /* Space for stack */
      justify-content: flex-end; /* Push images towards text */
      margin-right: -20px; /* Slight overlap visually */
    }

    #ieo-template--{{ section.id }} .ieo-layer {
      width: 130%; /* Make image larger than its container column */
      max-width: none;
      right: -20%; /* Shift right */
      left: auto;
    }

    /* Mobile Animation State */
    #ieo-template--{{ section.id }} .ieo-layer.is-on {
      /* Use Mobile Step Variable */
      transform: translateY(calc(var(--i) * var(--step-m))) scale(1);
    }

    /* Text Column */
    #ieo-template--{{ section.id }} .ieo-right {
      padding-top: 25px; /* Align first text with first image */
    }

    #ieo-template--{{ section.id }} .ieo-list {
      /* Update Gap to match Mobile Step */
      gap: var(--step-m); 
    }

    #ieo-template--{{ section.id }} .ieo-li {
      gap: 8px;
    }

    #ieo-template--{{ section.id }} .ieo-line {
      width: 20px; /* Shorter line */
    }

    #ieo-template--{{ section.id }} .ieo-li-title {
      font-size: 14px;
      line-height: 1.2;
      white-space: normal; /* Allow wrapping on mobile */
    }

    #ieo-template--{{ section.id }} .ieo-li-desc {
      font-size: 12px;
      margin-top: 4px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sec = document.getElementById('ieo-template--{{ section.id }}');
    if (!sec) return;

    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.15 
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const layers = sec.querySelectorAll('.ieo-layer');
          const listItems = sec.querySelectorAll('.ieo-li');

          layers.forEach(el => el.classList.add('is-on'));
          listItems.forEach(el => el.classList.add('is-on'));

          observer.disconnect();
        }
      });
    }, observerOptions);

    observer.observe(sec);
  });
</script>