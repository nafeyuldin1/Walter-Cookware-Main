{% schema %}
{
  "name": "Engineered Layers",
  "settings": [
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#001f19"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#BCA588"
    },
    {
      "type": "color",
      "id": "line_color",
      "label": "Line Color",
      "default": "#A3835F"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Layer Title Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Layer Description Color",
      "default": "#B0B0B0"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Engineered From The Inside Out"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "layer",
      "name": "Layer",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Layer Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Layer Name"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "Layer details here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Engineered Layers",
      "blocks": [
        {
          "type": "layer",
          "settings": {
            "title": "Pure Titanium With SlipScale Technology",
            "desc": "Non-toxic. Non-stick."
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Third Recycled Aluminum Core",
            "desc": "Pushes heat out evenly to all edges"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Second Recycled Aluminum Core",
            "desc": "Stabilizes internal heat"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "First Recycled Aluminum Core",
            "desc": "Pulls heat in fast"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Induction-Ready Stainless Steel",
            "desc": "Adds durability & magnetic conductivity"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="ieo-template--{{ section.id }}" class="ieo">
  <div class="ieo-inner">
    {% if section.settings.heading != blank %}
      <h2 class="ieo-title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="ieo-layout">
      
      <div class="ieo-visual" style="--count: {{ section.blocks.size }};">
        {% for block in section.blocks %}
          
          {% assign i = forloop.index0 %}
          {% assign z = 100 | minus: i %}

          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 1000 }}" 
              class="ieo-layer {% if forloop.first %}ieo-pan-first{% endif %}" 
              data-step="{{ forloop.index }}"
              style="--i: {{ i }}; z-index: {{ z }};"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              width="600"
              height="auto"
            >
          {% else %}
             <div class="ieo-layer placeholder-layer" 
                  style="--i: {{ i }}; z-index: {{ z }}; background: #4a4a4a;"></div>
            {% endif %}
        {% endfor %}
      </div>

      <div class="ieo-content">
        <ul class="ieo-list">
          {% for block in section.blocks %}
            <li class="ieo-li" style="--i: {{ forloop.index0 }};" {{ block.shopify_attributes }}>
              <span class="ieo-line"></span>
              <div class="ieo-text">
                {% if block.settings.title != blank %}
                  <div class="ieo-li-title">{{ block.settings.title }}</div>
                {% endif %}
                
                {% if block.settings.desc != blank %}
                  <div class="ieo-li-desc">{{ block.settings.desc }}</div>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>
  </div>
</section>

<style>
  /* --- CONFIGURATION --- */
  #ieo-template--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    --heading-color: {{ section.settings.heading_color }};
    --line-color: {{ section.settings.line_color }};
    --title-color: {{ section.settings.title_color }};
    --desc-color: {{ section.settings.desc_color }};
    
    /* THE CONTROLLER - Adjust vertical spread here */
    --step-desktop: 130px; 
    --step-mobile: 55px; /* Very compact for mobile */
    
    /* Spacing */
    --pt: {{ section.settings.padding_top }}px;
    --pb: {{ section.settings.padding_bottom }}px;
  }

  /* --- BASE --- */
  #ieo-template--{{ section.id }}.ieo {
    color: #fff;
    overflow: hidden;
    position: relative;
  }

  #ieo-template--{{ section.id }} .ieo-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--pt) 20px var(--pb) 20px;
  }

  #ieo-template--{{ section.id }} .ieo-title {
    margin: 0 0 60px;
    font-family: 'Neue Montreal', sans-serif;
    color: var(--heading-color);
    font-size: 42px;
    font-weight: 400;
    line-height: 1.2;
    text-align: center;
    text-transform: capitalize;
  }

  /* --- GRID --- */
  #ieo-template--{{ section.id }} .ieo-layout {
    display: grid;
    /* Desktop: Equal split */
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: flex-start;
    position: relative;
  }

  /* --- LEFT: IMAGES --- */
  #ieo-template--{{ section.id }} .ieo-visual {
    position: relative;
    width: 100%;
    /* Auto height based on number of items * step */
    height: calc(var(--count) * var(--step-desktop) + 300px);
    max-width: 600px;
    margin: 0 auto;
  }

  #ieo-template--{{ section.id }} .ieo-layer {
    position: absolute;
    width: 90%;
    max-width: 500px;
    height: auto;
    left: 0; right: 0; margin: 0 auto;
    
    /* Animation Start */
    top: 50px;
    opacity: 0;
    transform: translateY(0) scale(0.9);
    
    transition: transform 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.8s ease;
    filter: drop-shadow(0 15px 25px rgba(0, 0, 0, 0.5));
    will-change: transform, opacity;
    
    transition-delay: calc(var(--i) * 150ms);
  }

  /* Top Pan Positioning */
  #ieo-template--{{ section.id }} .ieo-pan-first {
    top: 0; 
    z-index: 1000;
  }

  /* Active State - EXPAND */
  #ieo-template--{{ section.id }} .ieo-layer.is-on {
    opacity: 1;
    transform: translateY(calc(var(--i) * var(--step-desktop))) scale(1);
  }

  /* Placeholder */
  #ieo-template--{{ section.id }} .placeholder-layer {
    height: 60px;
    border-radius: 50%;
  }

  /* --- RIGHT: TEXT LIST --- */
  #ieo-template--{{ section.id }} .ieo-content {
    /* Padding matches the first image's top position roughly */
    padding-top: 50px; 
  }

  #ieo-template--{{ section.id }} .ieo-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    /* This gap MUST match the image step for alignment */
    gap: 0; 
  }

  #ieo-template--{{ section.id }} .ieo-li {
    display: flex;
    align-items: center;
    gap: 20px;
    opacity: 0;
    transform: translateX(30px);
    transition: transform 0.8s ease, opacity 0.8s ease;
    transition-delay: calc(var(--i) * 150ms);
    
    /* Strict Height Control for Alignment */
    height: var(--step-desktop);
    position: relative;
  }

  #ieo-template--{{ section.id }} .ieo-li.is-on {
    opacity: 1;
    transform: translateX(0);
  }

  #ieo-template--{{ section.id }} .ieo-line {
    background: var(--line-color);
    height: 1px;
    width: 60px;
    flex-shrink: 0;
    display: block;
  }

  #ieo-template--{{ section.id }} .ieo-li-title {
    font-family: 'Neue Montreal', sans-serif;
    color: var(--title-color);
    font-size: 24px;
    font-weight: 500;
    line-height: 1.2;
    text-transform: capitalize;
  }

  #ieo-template--{{ section.id }} .ieo-li-desc {
    margin-top: 6px;
    font-family: 'Neue Montreal', sans-serif;
    color: var(--desc-color);
    font-size: 16px;
    line-height: 1.4;
  }

  /* =========================================
     MOBILE STYLES (COMPETITOR STYLE)
     ========================================= */
  @media (max-width: 900px) {
    #ieo-template--{{ section.id }} .ieo-inner {
      padding-top: 40px; 
      padding-bottom: 20px;
      padding-left: 10px; 
      padding-right: 10px;
    }

    #ieo-template--{{ section.id }} .ieo-title {
      font-size: 26px;
      margin-bottom: 20px;
    }

    /* GRID: 35% Image | 65% Text */
    #ieo-template--{{ section.id }} .ieo-layout {
      grid-template-columns: 35% 65%;
      gap: 10px;
    }

    /* VISUAL COLUMN */
    #ieo-template--{{ section.id }} .ieo-visual {
      /* Dynamic height for mobile */
      height: calc(var(--count) * var(--step-mobile) + 150px);
      min-height: 400px;
      margin: 0;
    }

    #ieo-template--{{ section.id }} .ieo-layer {
      width: 140%; /* Make pan look big and overflow slightly */
      right: -20%; /* Push right towards line */
      left: auto;
      max-width: none;
      top: 0;
    }

    /* Mobile Animation: Uses mobile step variable */
    #ieo-template--{{ section.id }} .ieo-layer.is-on {
      transform: translateY(calc(var(--i) * var(--step-mobile))) scale(1);
    }
    
    #ieo-template--{{ section.id }} .ieo-pan-first {
      top: 0;
    }

    /* TEXT COLUMN */
    #ieo-template--{{ section.id }} .ieo-content {
      padding-top: 20px; /* Align text with first pan */
    }

    /* Text Item: Height matches Mobile Step exactly */
    #ieo-template--{{ section.id }} .ieo-li {
      height: var(--step-mobile);
      gap: 8px;
      align-items: flex-start; /* Align text to top of its block */
      padding-top: 10px; /* Fine tune vertical centering */
    }

    #ieo-template--{{ section.id }} .ieo-line {
      width: 15px; /* Short line */
      margin-top: 8px; /* Align line with first line of text */
    }

    #ieo-template--{{ section.id }} .ieo-li-title {
      font-size: 13px;
      line-height: 1.1;
      margin-bottom: 2px;
    }

    #ieo-template--{{ section.id }} .ieo-li-desc {
      font-size: 11px;
      margin-top: 2px;
      line-height: 1.2;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sec = document.getElementById('ieo-template--{{ section.id }}');
    if (!sec) return;

    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1 
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const layers = sec.querySelectorAll('.ieo-layer');
          const listItems = sec.querySelectorAll('.ieo-li');

          layers.forEach(el => el.classList.add('is-on'));
          listItems.forEach(el => el.classList.add('is-on'));

          observer.disconnect();
        }
      });
    }, observerOptions);

    observer.observe(sec);
  });
</script>