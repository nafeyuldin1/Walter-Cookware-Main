{% schema %}
{
  "name": "Engineered Layers",
  "settings": [
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#07231b"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#BCA588"
    },
    {
      "type": "color",
      "id": "line_color",
      "label": "Line Color",
      "default": "#A3835F"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Layer Title Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Layer Description Color",
      "default": "#B0B0B0"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Engineered From The Inside Out"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_top_m",
      "min": 0,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_m",
      "min": 0,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "layer",
      "name": "Layer",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Layer Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Layer Name"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "Layer details here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Engineered Layers",
      "blocks": [
        {
          "type": "layer",
          "settings": {
            "title": "Pure Titanium With SlipScale Technology",
            "desc": "Non-toxic. Non-stick."
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Third Recycled Aluminum Core",
            "desc": "Pushes heat out evenly to all edges"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Second Recycled Aluminum Core",
            "desc": "Stabilizes internal heat"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "First Recycled Aluminum Core",
            "desc": "Pulls heat in fast"
          }
        },
        {
          "type": "layer",
          "settings": {
            "title": "Induction-Ready Stainless Steel",
            "desc": "Adds durability & magnetic conductivity"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="ieo-template--{{ section.id }}" class="ieo">
  <div class="ieo-inner">
    {% if section.settings.heading != blank %}
      <h2 class="ieo-title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="ieo-wrapper">
      
      <div class="ieo-visual">
        <div class="ieo-visual-inner">
          {% for block in section.blocks %}
            {% assign i = forloop.index0 %}
            {% assign z = 100 | minus: i %}
            
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}" 
                class="ieo-layer {% if forloop.first %}ieo-pan-top{% endif %}" 
                style="--i: {{ i }}; z-index: {{ z }};"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="500"
                height="auto"
              >
            {% else %}
               <div class="ieo-layer placeholder-layer" 
                    style="--i: {{ i }}; z-index: {{ z }}; background: #4a4a4a;"></div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="ieo-content">
        <ul class="ieo-list">
          {% for block in section.blocks %}
            <li class="ieo-item" style="--i: {{ forloop.index0 }};">
              <span class="ieo-line"></span>
              <div class="ieo-text">
                {% if block.settings.title != blank %}
                  <h3 class="ieo-item-title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.desc != blank %}
                  <p class="ieo-item-desc">{{ block.settings.desc }}</p>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>
  </div>
</section>

<style>
  /* --- VARIABLES --- */
  #ieo-template--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    --heading-color: {{ section.settings.heading_color }};
    --line-color: {{ section.settings.line_color }};
    --title-color: {{ section.settings.title_color }};
    --desc-color: {{ section.settings.desc_color }};
    
    /* Spacing Logic */
    --step-desktop: 120px; /* Vertical gap between layers on Desktop */
    --step-mobile: 65px;   /* TIGHT Vertical gap on Mobile */
    
    --pt: {{ section.settings.padding_top }}px;
    --pb: {{ section.settings.padding_bottom }}px;
    --pt-m: {{ section.settings.padding_top_m }}px;
    --pb-m: {{ section.settings.padding_bottom_m }}px;
  }

  /* --- GENERAL LAYOUT --- */
  #ieo-template--{{ section.id }}.ieo {
    color: #fff;
    overflow: hidden;
    position: relative;
  }

  #ieo-template--{{ section.id }} .ieo-inner {
    max-width: 1300px;
    margin: 0 auto;
    padding-top: var(--pt);
    padding-bottom: var(--pb);
    padding-left: 20px;
    padding-right: 20px;
  }

  #ieo-template--{{ section.id }} .ieo-title {
    margin: 0 0 50px;
    font-family: 'Neue Montreal', sans-serif;
    color: var(--heading-color);
    font-size: 42px;
    font-weight: 400;
    line-height: 1.2;
    text-align: center;
    text-transform: capitalize;
  }

  #ieo-template--{{ section.id }} .ieo-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 40px;
    position: relative;
  }

  /* --- LEFT: IMAGES --- */
  #ieo-template--{{ section.id }} .ieo-visual {
    width: 45%;
    position: relative;
    /* Height calculation: (Number of items * step) + base height */
    min-height: 750px; 
  }
  
  #ieo-template--{{ section.id }} .ieo-visual-inner {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  #ieo-template--{{ section.id }} .ieo-layer {
    position: absolute;
    width: 90%;
    max-width: 480px;
    height: auto;
    left: 0; right: 0; margin: 0 auto; /* Center horizontally */
    
    /* Default position */
    top: 0;
    opacity: 0;
    transform: translateY(0) scale(0.95);
    
    transition: transform 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.8s ease;
    filter: drop-shadow(0 15px 20px rgba(0,0,0,0.4));
    will-change: transform, opacity;
    transition-delay: calc(var(--i) * 150ms);
  }

  /* Top Pan slightly higher */
  #ieo-template--{{ section.id }} .ieo-pan-top {
    top: -40px;
    z-index: 1000;
  }

  /* Active State (Desktop) */
  #ieo-template--{{ section.id }} .ieo-layer.is-on {
    opacity: 1;
    transform: translateY(calc(var(--i) * var(--step-desktop))) scale(1);
  }

  /* --- RIGHT: TEXT --- */
  #ieo-template--{{ section.id }} .ieo-content {
    width: 50%;
    padding-top: 10px; /* Align first text with first image */
  }

  #ieo-template--{{ section.id }} .ieo-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    /* Gap matches image step */
    gap: var(--step-desktop);
  }

  #ieo-template--{{ section.id }} .ieo-item {
    display: flex;
    align-items: center;
    gap: 20px;
    opacity: 0;
    transform: translateX(30px);
    transition: transform 0.8s ease, opacity 0.8s ease;
    transition-delay: calc(var(--i) * 150ms);
    position: relative;
  }

  #ieo-template--{{ section.id }} .ieo-item.is-on {
    opacity: 1;
    transform: translateX(0);
  }

  #ieo-template--{{ section.id }} .ieo-line {
    width: 60px;
    height: 1px;
    background: var(--line-color);
    flex-shrink: 0;
  }

  #ieo-template--{{ section.id }} .ieo-item-title {
    font-family: 'Neue Montreal', sans-serif;
    color: var(--title-color);
    font-size: 22px;
    font-weight: 500;
    margin: 0 0 5px;
    line-height: 1.3;
  }

  #ieo-template--{{ section.id }} .ieo-item-desc {
    font-family: 'Neue Montreal', sans-serif;
    color: var(--desc-color);
    font-size: 16px;
    margin: 0;
    line-height: 1.4;
  }

  /* --- MOBILE RESPONSIVENESS (THE FIX) --- */
  @media (max-width: 900px) {
    #ieo-template--{{ section.id }} .ieo-inner {
      padding-top: var(--pt-m);
      padding-bottom: var(--pb-m);
      padding-left: 10px;
      padding-right: 10px;
    }

    #ieo-template--{{ section.id }} .ieo-title {
      font-size: 26px;
      margin-bottom: 30px;
    }

    /* Keep side-by-side layout */
    #ieo-template--{{ section.id }} .ieo-wrapper {
      gap: 10px;
      align-items: flex-start;
    }

    /* 1. Image Column: Narrower to fit text */
    #ieo-template--{{ section.id }} .ieo-visual {
      width: 38%; /* Fixed width */
      min-height: 480px; /* Reduced height */
    }

    #ieo-template--{{ section.id }} .ieo-layer {
      width: 140%; /* Image overflows slightly to look bigger */
      right: -20%; /* Push right towards text */
      left: auto;
      max-width: none;
    }

    /* Mobile Animation Step */
    #ieo-template--{{ section.id }} .ieo-layer.is-on {
      transform: translateY(calc(var(--i) * var(--step-mobile))) scale(1);
    }
    
    #ieo-template--{{ section.id }} .ieo-pan-top {
      top: -15px; /* Less offset on mobile */
    }

    /* 2. Text Column: Wider */
    #ieo-template--{{ section.id }} .ieo-content {
      width: 62%;
      padding-top: 15px; /* Align text with image center */
    }

    #ieo-template--{{ section.id }} .ieo-list {
      gap: var(--step-mobile); /* Tighter gap */
    }

    #ieo-template--{{ section.id }} .ieo-item {
      gap: 8px; /* Closer line to text */
    }

    #ieo-template--{{ section.id }} .ieo-line {
      width: 15px; /* Short line */
    }

    #ieo-template--{{ section.id }} .ieo-item-title {
      font-size: 14px;
      line-height: 1.2;
    }

    #ieo-template--{{ section.id }} .ieo-item-desc {
      font-size: 11px;
      line-height: 1.3;
      margin-top: 2px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sec = document.getElementById('ieo-template--{{ section.id }}');
    if (!sec) return;

    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.15 
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const layers = sec.querySelectorAll('.ieo-layer');
          const listItems = sec.querySelectorAll('.ieo-item');

          layers.forEach(el => el.classList.add('is-on'));
          listItems.forEach(el => el.classList.add('is-on'));

          observer.disconnect();
        }
      });
    }, observerOptions);

    observer.observe(sec);
  });
</script>