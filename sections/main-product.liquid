    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Typography Colors"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#E9E2D8"
    },
    {
      "type": "color",
      "id": "compare_price_color",
      "label": "Compare Price Color",
      "default": "#888888"
    },
    {
      "type": "color",
      "id": "sale_badge_bg",
      "label": "Sale Badge Background",
      "default": "#097350"
    },
    {
      "type": "color",
      "id": "sale_badge_text",
      "label": "Sale Badge Text",
      "default": "#E9E2D8"
    },
    {
      "type": "header",
      "content": "Bundle Widget Colors"
    },
    {
      "type": "color",
      "id": "bundle_active_bg",
      "label": "Active Card BG",
      "default": "#F6F4F0"
    },
    {
      "type": "color",
      "id": "bundle_border_color",
      "label": "Collapsed Border Color",
      "default": "#E9E2D8"
    },
    {
      "type": "color",
      "id": "atc_bg",
      "label": "ATC Button Background",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "atc_text",
      "label": "ATC Button Text",
      "default": "#121212"
