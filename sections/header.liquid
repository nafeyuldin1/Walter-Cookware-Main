<style>
  /* --- BASE HEADER STYLES --- */
  header-drawer { justify-self: start; margin-left: -1.2rem; }
  .header__heading-logo { max-width: {{ section.settings.logo_width }}px; height: auto; }
  .header--middle-left { grid-template-areas: "heading navigation icons"; grid-template-columns: auto 1fr auto; }
  .header--middle-center { grid-template-areas: "navigation heading icons"; grid-template-columns: 1fr auto 1fr; }
  
  @media screen and (min-width: 990px) {
    header-drawer { display: none; }
  }
  .menu-drawer-container { display: flex; }
  .list-menu { list-style: none; padding: 0; margin: 0; }
  .list-menu--inline { display: inline-flex; flex-wrap: wrap; }
  .list-menu__item { display: flex; align-items: center; line-height: 1.3; }
  .list-menu__item--link { text-decoration: none; padding-bottom: 1rem; padding-top: 1rem; color: rgba(var(--color-foreground), 0.75); }
  .list-menu__item--link:hover { color: rgb(var(--color-foreground)); text-decoration: underline; }

  /* --- CUSTOM MEGA MENU STRIP (DESKTOP) --- */
  .cat-strip { 
    display: flex; 
    justify-content: center; 
    gap: 30px; 
    padding: 0; 
    border-bottom: 1px solid rgba(0,0,0,0.08); 
    background: #ffffff; 
    position: relative;
    z-index: 10;
  }
  
  .cat-strip__item { 
    background: none; 
    border: none; 
    font-size: 14px; 
    font-weight: 600; 
    cursor: pointer; 
    padding: 15px 5px; 
    color: #333; 
    border-bottom: 3px solid transparent; 
    transition: all 0.2s; 
    white-space: nowrap; 
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .cat-strip__item:hover, 
  .cat-strip__item.is-active { 
    color: #000; 
    border-bottom: 3px solid #000; 
  }
  
  /* --- MEGA MENU PORTALS (CONTENT) --- */
  .cat-portals-wrapper {
    position: absolute;
    left: 0;
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    z-index: 9;
    box-shadow: 0 15px 30px rgba(0,0,0,0.05);
    display: none; /* Hidden by default */
  }
  
  .cat-portals-wrapper.is-open {
    display: block;
    animation: fadeInMenu 0.3s ease-in-out;
  }

  .cat-portal {
    display: none; /* Hide individual tabs */
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 20px;
    gap: 40px;
  }

  .cat-portal[aria-hidden="false"] {
    display: flex;
  }

  /* Left Sidebar in Mega Menu */
  .cat-portal__left {
    width: 25%;
    padding-right: 30px;
    border-right: 1px solid #f0f0f0;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cat-portal__title {
    font-size: 22px;
    font-weight: 800;
    margin: 0 0 10px 0;
    color: #121212;
  }

  .cat-portal__link {
    font-size: 14px;
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #333;
  }

  .cat-portal__desc {
    font-size: 14px;
    line-height: 1.6;
    color: #555;
    font-style: italic;
  }

  .cat-portal__endorse {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: auto;
    background: #f9f9f9;
    padding: 10px;
    border-radius: 8px;
  }

  .endorse__avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    object-fit: cover;
  }

  .endorse__name {
    font-weight: 700;
    font-size: 12px;
    color: #000;
  }

  .endorse__stars {
    color: #B57C46;
    font-size: 12px;
  }

  /* Right Side Grid */
  .cat-portal__grid {
    width: 75%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .cat-prod {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s;
  }

  .cat-prod:hover {
    transform: translateY(-5px);
  }

  .cat-prod__media {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 12px;
    aspect-ratio: 1 / 1;
    background: #f4f4f4;
  }

  .cat-prod__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cat-prod__badge {
    position: absolute;
    top: 8px;
    left: 8px;
    background: #a83232;
    color: #fff;
    font-size: 10px;
    font-weight: 700;
    padding: 4px 8px;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .cat-prod__title {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 5px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .cat-prod__price {
    font-size: 14px;
  }

  .cat-prod__price .cmp {
    text-decoration: line-through;
    color: #888;
    margin-right: 6px;
  }

  .cat-prod__price .prc {
    font-weight: 700;
    color: #000;
  }

  @keyframes fadeInMenu {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Hide tabs on mobile */
  @media screen and (max-width: 990px) {
    .cat-strip, .cat-portals-wrapper { display: none !important; }
  }
</style>

