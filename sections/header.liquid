{%- style -%}
  /* --- 1. DYNAMIC BACKGROUND SETTINGS --- */
  :root {
    --header-bg-home: {{ section.settings.bg_home }};
    --header-bg-pages: {{ section.settings.bg_pages }};
    --header-bg-sticky: {{ section.settings.bg_sticky }};
    --header-blur: {{ section.settings.sticky_blur }}px;
    --header-text-color: {{ section.settings.text_color }};
  }

  .header-wrapper {
    position: relative;
    width: 100%;
    z-index: 1000;
    transition: background-color 0.4s ease, backdrop-filter 0.4s ease;
    background-color: var(--header-bg-pages); /* Default Page Background */
  }

  /* Home Page Specific Background */
  body.template-index .header-wrapper:not(.shopify-section-header-sticky) {
    background-color: var(--header-bg-home);
    position: absolute; 
    top: 0; 
    left: 0; 
    border-bottom: none;
  }

  /* Sticky Header State */
  .header-wrapper.shopify-section-header-sticky {
    position: fixed;
    top: 0;
    background-color: var(--header-bg-sticky) !important;
    backdrop-filter: blur(var(--header-blur));
    -webkit-backdrop-filter: blur(var(--header-blur));
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  /* --- 2. HEADER LAYOUT --- */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 3rem;
    max-width: 1600px;
    margin: 0 auto;
    color: var(--header-text-color);
  }

  .header__heading-link { text-decoration: none; color: inherit; }
  .header__heading-logo { display: block; width: {{ section.settings.logo_width }}px; }

  .header__icons { display: flex; align-items: center; gap: 20px; }
  .header__icon { color: inherit; cursor: pointer; display: flex; align-items: center; justify-content: center; background: none; border: none; padding: 0;}
  .header__icon svg { width: 24px; height: 24px; fill: none; stroke: currentColor; stroke-width: 1.5; }

  /* --- 3. DESKTOP BOTTOM MENU (BLOCKS) --- */
  .header-bottom-menu {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding: 12px 0;
    display: none; /* Hidden on mobile */
  }
  @media screen and (min-width: 990px) {
    .header-bottom-menu { display: block; }
  }
  
  .header-bottom-list {
    display: flex;
    justify-content: center;
    gap: 40px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .header-bottom-link {
    text-decoration: none;
    color: var(--header-text-color);
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    padding-bottom: 5px;
  }
  
  .header-bottom-link:after {
    content: '';
    position: absolute;
    bottom: 0; left: 0; width: 0%; height: 2px;
    background: currentColor;
    transition: width 0.3s;
  }
  .header-bottom-link:hover:after { width: 100%; }

{%- endstyle -%}

<script src="{{ 'details-modal.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>

{%- assign header_tag = 'div' -%}
{%- if section.settings.sticky_header_type != 'none' -%}
  {%- assign header_tag = 'sticky-header' -%}
{%- endif -%}

<{{ header_tag }} data-sticky-type="{{ section.settings.sticky_header_type }}" class="header-wrapper">
  
  <header class="header page-width">
    
    {%- if section.blocks.size > 0 -%}
      <div class="header__icon header__icon--menu" id="Drawer-Trigger">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      </div>
    {%- endif -%}

    <a href="{{ routes.root_url }}" class="header__heading-link">
      {%- if section.settings.logo != blank -%}
        {{ section.settings.logo | image_url: width: 600 | image_tag: class: 'header__heading-logo', widths: '100, 200, 300', alt: shop.name }}
      {%- else -%}
        <span class="h2">{{ shop.name }}</span>
      {%- endif -%}
    </a>

    <div class="header__icons">
      <a href="{{ routes.search_url }}" class="header__icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M11 19c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8z"></path><path d="M21 21l-4.35-4.35"></path></svg>
      </a>
      <a href="{{ routes.cart_url }}" class="header__icon" id="cart-icon-bubble">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M6 6h15l-1.68 9H7.68L6 6z"></path><path d="M6 6L4 2H1"></path><circle cx="9" cy="20" r="1"></circle><circle cx="18" cy="20" r="1"></circle></svg>
        {%- if cart != empty -%}
          <div class="cart-count-bubble"><span>{{ cart.item_count }}</span></div>
        {%- endif -%}
      </a>
    </div>
  </header>

  {%- if section.blocks.size > 0 -%}
    <div class="header-bottom-menu page-width">
      <ul class="header-bottom-list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'desktop_nav' -%}
            <li>
              <a href="{{ block.settings.url }}" class="header-bottom-link" {{ block.shopify_attributes }}>
                {{ block.settings.title }}
              </a>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>
  {%- endif -%}

  {% render 'header-drawer' %}

</{{ header_tag }}>

{% javascript %}
  class StickyHeader extends HTMLElement {
    constructor() { super(); }
    connectedCallback() {
      this.header = this;
      this.headerIsAlwaysSticky = this.getAttribute('data-sticky-type') === 'always';
      window.addEventListener('scroll', this.onScroll.bind(this));
    }
    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop > 50) {
        this.header.classList.add('shopify-section-header-sticky');
      } else {
        this.header.classList.remove('shopify-section-header-sticky');
      }
    }
  }
  customElements.define('sticky-header', StickyHeader);

  // Drawer Open/Close Logic
  document.getElementById('Drawer-Trigger').addEventListener('click', function() {
    document.querySelector('.mobile-drawer-overlay').classList.add('active');
    document.querySelector('.mobile-drawer-panel').classList.add('active');
  });
{% endjavascript %}

