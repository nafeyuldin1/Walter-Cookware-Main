<script>
  (function(){
    var root = document.getElementById('cat-portals-wrapper');
    var tabs = document.querySelectorAll('.cat-strip__item');
    if(!root || !tabs.length) return;
  
    function showPanel(key){
      var next = root.querySelector('.cat-portal[data-key="'+key+'"]');
      if (!next) return;
      
      root.hidden = false;
      root.querySelectorAll('.cat-portal').forEach(function(p){
        p.setAttribute('aria-hidden', p === next ? 'false' : 'true');
      });
      tabs.forEach(function(b){ b.classList.toggle('is-active', b.dataset.key === key); });
    }
  
    function hidePanel(){
      root.hidden = true;
      tabs.forEach(function(b){ b.classList.remove('is-active'); });
    }
  
    // Hover Effect for Tabs
    tabs.forEach(function(btn){
      btn.addEventListener('mouseenter', function(e){
        var key = this.dataset.key;
        showPanel(key);
      });
    });
  
    // Close when leaving the wrapper
    var wrapper = document.querySelector('.cat-strip-wrapper');
    if(wrapper){
      wrapper.addEventListener('mouseleave', function(){
        hidePanel();
      });
    }
  })();
</script>

