<style>
  header-drawer { justify-self: start; margin-left: -1.2rem; }
  .header__heading-logo { max-width: {{ section.settings.logo_width }}px; }
  @media screen and (min-width: 990px) {
    header-drawer { display: none; }
  }
  .menu-drawer-container { display: flex; }
  .list-menu { list-style: none; padding: 0; margin: 0; }
  .list-menu--inline { display: inline-flex; flex-wrap: wrap; }
  .list-menu__item { display: flex; align-items: center; line-height: 1.3; }
  .list-menu__item--link { text-decoration: none; padding-bottom: 1rem; padding-top: 1rem; color: {{ section.settings.menu_color }}; }
  @media screen and (min-width: 750px) { .list-menu__item--link { padding-bottom: 0.5rem; padding-top: 0.5rem; } }
  
  /* --- CUSTOM MEGA MENU CSS --- */
  .cat-strip { display: flex; justify-content: center; gap: 30px; padding: 15px 0; border-bottom: 1px solid rgba(0,0,0,0.05); background: #fff; overflow-x: auto; }
  .cat-strip__item { background: none; border: none; font-size: 15px; font-weight: 600; cursor: pointer; padding: 5px 0; color: #333; border-bottom: 2px solid transparent; transition: all 0.2s; white-space: nowrap; }
  .cat-strip__item:hover, .cat-strip__item.is-active { color: #000; border-bottom: 2px solid #000; }
  
  .cat-portals { position: absolute; top: 100%; left: 0; width: 100%; background: #fff; border-bottom: 1px solid #ddd; box-shadow: 0 10px 30px rgba(0,0,0,0.08); z-index: 999; display: none; }
  .cat-portals.is-open { display: block; animation: slideDown 0.3s ease; }
  .cat-portal { display: flex; max-width: 1400px; margin: 0 auto; padding: 40px; display: none; gap: 40px; }
  .cat-portal[aria-hidden="false"] { display: flex; }
  
  /* Left Sidebar */
  .cat-portal__left { width: 25%; border-right: 1px solid #eee; padding-right: 30px; display: flex; flex-direction: column; justify-content: space-between; }
  .cat-portal__title { font-size: 24px; font-weight: 700; margin-bottom: 10px; margin-top:0; }
  .cat-portal__link { text-decoration: underline; font-size: 14px; color: #555; text-transform: uppercase; letter-spacing: 1px; font-weight: 600; }
  .cat-portal__desc { margin-top: 20px; font-size: 15px; line-height: 1.6; color: #444; font-style: italic; }
  .cat-portal__endorse { display: flex; align-items: center; gap: 15px; margin-top: 25px; }
  .endorse__avatar { border-radius: 50%; width: 50px; height: 50px; object-fit: cover; }
  .endorse__name { font-weight: bold; font-size: 13px; }
  .endorse__stars svg { width: 12px; height: 12px; fill: #B57C46; }

  /* Grid */
  .cat-portal__grid { width: 75%; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
  .cat-prod { text-align: center; position: relative; }
  .cat-prod__media { position: relative; display: block; border-radius: 8px; overflow: hidden; margin-bottom: 12px; aspect-ratio: 1; }
  .cat-prod__media img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.4s; }
  .cat-prod__media:hover img { transform: scale(1.05); }
  .cat-prod__sale-badge { position: absolute; top: 8px; left: 8px; background: #932933; color: #fff; padding: 4px 8px; font-size: 10px; border-radius: 4px; font-weight: 700; letter-spacing: 0.5px; }
  .cat-prod__title { font-size: 14px; font-weight: 600; text-decoration: none; color: #000; display: block; line-height: 1.3; margin-bottom: 5px; }
  .cat-prod__price { font-size: 14px; }
  .cat-prod_cmp-price { text-decoration: line-through; color: #888; margin-right: 5px; }
  .cat-prod_price { color: #000; font-weight: 700; }
  
  @keyframes slideDown { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }
  @media screen and (max-width: 990px) { .cat-strip, .cat-portals { display: none !important; } }
</style>

<sticky-header data-sticky-type="{{ section.settings.sticky_header_type }}" class="header-wrapper color-{{ section.settings.color_scheme }} gradient">
  <header class="header header--{{ section.settings.logo_position }} page-width header--has-menu">
    
    {%- if section.settings.menu != blank -%}
      {% render 'header-drawer' %}
    {%- endif -%}

    {%- if request.page_type == 'index' -%}
      <h1 class="header__heading">
    {%- endif -%}
        <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
          {%- if settings.logo != blank -%}
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {{ settings.logo | image_url: width: section.settings.logo_width | image_tag: class: 'header__heading-logo', widths: '50, 100, 150, 200, 250', height: settings.logo.height, width: section.settings.logo_width, alt: logo_alt }}
          {%- else -%}
            <span class="h2">{{ shop.name }}</span>
          {%- endif -%}
        </a>
    {%- if request.page_type == 'index' -%}
      </h1>
    {%- endif -%}

    {%- if section.settings.menu != blank -%}
      <nav class="header__inline-menu">
        <ul class="list-menu list-menu--inline" role="list">
          {%- for link in section.settings.menu.links -%}
            <li>
              <a href="{{ link.url }}" class="header__menu-item list-menu__item link link--text focus-inset">
                <span>{{ link.title | escape }}</span>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    {%- endif -%}

    <div class="header__icons">
      {% render 'header-search', input_id: 'Search-In-Modal' %}
      <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
        {%- render 'icon-cart' -%}
        <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
        {%- if cart != empty -%}
          <div class="cart-count-bubble">
            {%- if cart.item_count < 100 -%}<span aria-hidden="true">{{ cart.item_count }}</span>{%- endif -%}
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          </div>
        {%- endif -%}
      </a>
    </div>
  </header>

  {%- assign mega_tabs = section.blocks | where: "type", "mega_tab" -%}
  {%- if mega_tabs.size > 0 -%}
    <div class="cat-strip page-width" role="tablist">
      {%- for block in mega_tabs -%}
        <button class="cat-strip__item" role="tab" data-key="tab-{{ block.id }}">
          {{ block.settings.tab_label }}
        </button>
      {%- endfor -%}
    </div>

    <div id="cat-portals-wrapper" class="cat-portals">
      {%- for block in mega_tabs -%}
        <section class="cat-portal" data-key="tab-{{ block.id }}" aria-hidden="true">
          <aside class="cat-portal__left">
            <div>
              <h3 class="cat-portal__title">{{ block.settings.sidebar_title }}</h3>
              {% if block.settings.link_text != blank %}
                <a class="cat-portal__link" href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
              {% endif %}
              <div style="width: 50px; height: 2px; background: #000; margin-top: 15px;"></div>
            </div>
            
            <div>
              {% if block.settings.review_text != blank %}
                <div class="cat-portal__desc">{{ block.settings.review_text }}</div>
              {% endif %}
              {% if block.settings.reviewer_name != blank %}
                <div class="cat-portal__endorse">
                  {% if block.settings.reviewer_image != blank %}
                    <img src="{{ block.settings.reviewer_image | image_url: width: 100 }}" class="endorse__avatar" loading="lazy" width="50" height="50">
                  {% endif %}
                  <div class="endorse__meta">
                    <div class="endorse__name">{{ block.settings.reviewer_name }}</div>
                    <div class="endorse__stars">
                      {% for i in (1..5) %}<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 8 9"><path d="M8.8 3.14c0 .07-.04.15-.12.23l-1.75 1.7.41 2.4c0 .02.01.05.01.09 0 .06-.02.12-.05.17a.27.27 0 01-.2.05c-.06 0-.12-.02-.19-.06L4.8 6.62 2.64 7.76c-.07.04-.13.06-.19.06-.07 0-.12-.02-.15-.07a.29.29 0 01-.05-.17c0-.02 0-.05.01-.1l.41-2.4L.92 3.37c-.08-.09-.12-.16-.12-.23 0-.12.09-.19.27-.22l2.41-.35L4.57.38c.06-.13.14-.2.24-.2.1 0 .17.07.23.2l1.08 2.19 2.41.35c.18.03.27.1.27.22z" fill="#B57C46"/></svg>{% endfor %}
                    </div>
                  </div>
                </div>
              {% endif %}
            </div>
          </aside>

          <div class="cat-portal__grid">
            {%- if block.settings.collection != blank -%}
              {%- for product in collections[block.settings.collection].products limit: 4 -%}
                <article class="cat-prod">
                  <a class="cat-prod__media" href="{{ product.url }}">
                    <img src="{{ product.featured_image | image_url: width: 600 }}" width="300" height="300" loading="lazy">
                    {% if product.compare_at_price > product.price %}
                      <span class="cat-prod__sale-badge">SAVE {{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round }}%</span>
                    {% endif %}
                  </a>
                  <div class="cat-prod__body">
                    <a class="cat-prod__title" href="{{ product.url }}">{{ product.title }}</a>
                    <div class="cat-prod__price">
                      {% if product.compare_at_price > product.price %}
                        <span class="cat-prod_cmp-price">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                      <span class="cat-prod_price">{{ product.price | money }}</span>
                    </div>
                  </div>
                </article>
              {%- endfor -%}
            {%- else -%}
              <p>Please select a collection in theme settings.</p>
            {%- endif -%}
          </div>
        </section>
      {%- endfor -%}
    </div>
  {%- endif -%}
</sticky-header>

{% javascript %}
  class StickyHeader extends HTMLElement {
    constructor() { super(); }
    connectedCallback() {
      this.header = document.querySelector('.header');
      // Add sticky logic here if needed, keeping it simple for now
    }
  }
  customElements.define('sticky-header', StickyHeader);

  // Mega Menu Hover Logic
  document.addEventListener('DOMContentLoaded', function() {
    const root = document.getElementById('cat-portals-wrapper');
    const tabs = document.querySelectorAll('.cat-strip__item');
    const portals = document.querySelectorAll('.cat-portal');
    const header = document.querySelector('.header-wrapper');

    if(!root) return;

    function closeMenu() {
      root.hidden = true; 
      root.classList.remove('is-open');
      tabs.forEach(t => t.classList.remove('is-active'));
      portals.forEach(p => p.setAttribute('aria-hidden', 'true'));
    }

    tabs.forEach(tab => {
      tab.addEventListener('mouseenter', function() {
        const key = this.dataset.key;
        tabs.forEach(t => t.classList.remove('is-active'));
        portals.forEach(p => p.setAttribute('aria-hidden', 'true'));
        
        this.classList.add('is-active');
        const target = root.querySelector(`.cat-portal[data-key="${key}"]`);
        if(target) {
          root.hidden = false;
          root.classList.add('is-open');
          target.setAttribute('aria-hidden', 'false');
        }
      });
    });

    header.addEventListener('mouseleave', closeMenu);
  });
{% endjavascript %}

