<style>
  /* GLOBAL RESETS */
  header-drawer { justify-self: start; margin-left: -1.2rem; }
  .header__heading-logo { max-width: {{ section.settings.logo_width }}px; height: auto; }
  
  @media screen and (min-width: 990px) {
    header-drawer { display: none; }
  }

  .menu-drawer-container { display: flex; }
  .list-menu { list-style: none; padding: 0; margin: 0; }
  .list-menu--inline { display: inline-flex; flex-wrap: wrap; }
  .list-menu__item { display: flex; align-items: center; line-height: 1.3; }
  .list-menu__item--link { text-decoration: none; padding-bottom: 1rem; padding-top: 1rem; color: inherit; }

  /* --- HEADER LAYOUT --- */
  .header-wrapper {
    background: #fff;
    z-index: 1000;
    width: 100%;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  /* TRANSPARENT HEADER LOGIC (HOMEPAGE ONLY) */
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) {
    background: transparent;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  /* Text Colors on Transparent Home */
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) .header__heading-link,
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) .header__icon,
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) .list-menu__item--link,
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) .cat-strip__item {
    color: #ffffff; /* White text on hero image */
  }

  /* Sticky State (Always White/Solid) */
  .shopify-section-header-sticky .header-wrapper {
    background: #fff !important;
    position: fixed !important;
    top: 0;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  }
  
  /* Mega Menu Strip (Desktop) */
  .cat-strip { 
    display: flex; 
    justify-content: center; 
    gap: 30px; 
    padding: 0; 
    border-top: 1px solid rgba(0,0,0,0.05);
  }
  
  /* Hide strip borders on transparent home */
  body.template-index .header-wrapper.is-transparent:not(.shopify-section-header-sticky) .cat-strip {
    border-top: 1px solid rgba(255,255,255,0.15);
  }

  .cat-strip__item { 
    background: none; 
    border: none; 
    font-size: 13px; 
    font-weight: 700; 
    text-transform: uppercase; 
    cursor: pointer; 
    padding: 15px 10px; 
    color: #333; 
    border-bottom: 2px solid transparent; 
    transition: all 0.2s; 
    letter-spacing: 1px;
  }
  
  .cat-strip__item:hover, .cat-strip__item.is-active { 
    opacity: 0.7;
    border-bottom: 2px solid currentColor;
  }

  /* Mega Menu Content (Portals) */
  .cat-portals-wrapper { position: absolute; left: 0; top: 100%; width: 100%; background: #fff; border-bottom: 1px solid #e5e5e5; z-index: 99; box-shadow: 0 15px 30px rgba(0,0,0,0.08); display: none; color: #000; }
  .cat-portals-wrapper.is-open { display: block; animation: fadeIn 0.2s ease-out; }
  
  .cat-portal { display: none; max-width: 1400px; margin: 0 auto; padding: 40px; gap: 40px; }
  .cat-portal[aria-hidden="false"] { display: flex; }
  
  /* Mega Menu Layout */
  .cat-portal__left { width: 25%; padding-right: 30px; border-right: 1px solid #eee; display: flex; flex-direction: column; justify-content: space-between; }
  .cat-portal__title { font-size: 24px; font-weight: 800; margin: 0 0 10px 0; color: #000; }
  .cat-portal__link { font-size: 14px; font-weight: 600; text-decoration: underline; color: #555; }
  .cat-portal__desc { font-size: 14px; line-height: 1.5; color: #555; margin-top: 15px; }
  
  .cat-portal__endorse { display: flex; align-items: center; gap: 12px; margin-top: 20px; background: #f9f9f9; padding: 12px; border-radius: 8px; }
  .endorse__avatar { width: 40px; height: 40px; border-radius: 50%; object-fit: cover; }
  
  .cat-portal__grid { width: 75%; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
  .cat-prod { text-decoration: none; color: inherit; text-align: center; }
  .cat-prod__media { position: relative; display: block; border-radius: 8px; overflow: hidden; margin-bottom: 10px; aspect-ratio: 1; background: #f4f4f4; }
  .cat-prod__media img { width: 100%; height: 100%; object-fit: cover; }
  
  .cat-prod__title { font-size: 13px; font-weight: 600; margin-bottom: 5px; color: #000; line-height: 1.3; }
  .cat-prod__price { font-size: 13px; font-weight: 700; color: #000; }

  @media screen and (max-width: 990px) { 
    .cat-strip, .cat-portals-wrapper { display: none !important; } 
  }
  @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }
</style>

