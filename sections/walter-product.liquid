                    <div class="secure-note" style="font-size: 12px; opacity: 0.8; margin-bottom: 8px;">
                      <span style="margin-right:5px">ðŸ”’</span> <span class="guarantee-text">{{ block.settings.guarantee_text }}</span>
                    </div>
                    <div class="pay-badges" style="display: flex; justify-content: center; gap: 5px;">
                      {% for type in shop.enabled_payment_types %}
                        {{ type | payment_type_svg_tag: class: 'icon icon--full-color', style: 'width: 38px;' }}
                      {% endfor %}
                    </div>
                  </div>
                </div>
                
                <script>
                  function updateBundleVariant(element) {
                    // Visual update
                    document.querySelectorAll('.pb-size-tab').forEach(el => el.classList.remove('is-active'));
                    element.classList.add('is-active');
                    // Data update
                    const id = element.dataset.variantId;
                    const price = element.dataset.price;
                    document.getElementById('bundle-variant-input').value = id;
                    document.getElementById('bundle-price-display').innerText = price;
                  }
                </script>

              {%- when 'shipping_bar' -%}
                <div class="shipbar" style="background: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }};" {{ block.shopify_attributes }}>
                  <div class="shipbar__label" style="font-size: 16px;">{{ block.settings.alert_text }}</div>
                  <div class="shipbar__list">
                    {% if block.settings.text_1 != blank %}
                    <div class="shipbar__item">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                      <span>{{ block.settings.text_1 }}</span>
                    </div>
                    {% endif %}
                    {% if block.settings.text_2 != blank %}
                    <div class="shipbar__item">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
                      <span>{{ block.settings.text_2 }}</span>
                    </div>
                    {% endif %}
                  </div>
                </div>

              {%- when 'info_tabs' -%}
  <div class="pit" id="product-info-tabs-{{ block.id }}" {{ block.shopify_attributes }}>
    <div class="pit-tabs" role="tablist">
      <button class="pit-tab is-active" role="tab" aria-selected="true" onclick="openPitTab(event, 'panel-1-{{ block.id }}', '{{ block.id }}')">
        {% if block.settings.tab_1_icon != blank %}
           <img src="{{ block.settings.tab_1_icon | image_url: width: 24 }}" width="20" height="20">
        {% else %}
           <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
        {% endif %}
        {{ block.settings.tab_1_label }}
        <span class="pit-underline"></span>
      </button>

      <button class="pit-tab" role="tab" aria-selected="false" onclick="openPitTab(event, 'panel-2-{{ block.id }}', '{{ block.id }}')">
        {{ block.settings.tab_2_label }}
        <span class="pit-underline"></span>
      </button>

      <button class="pit-tab" role="tab" aria-selected="false" onclick="openPitTab(event, 'panel-3-{{ block.id }}', '{{ block.id }}')">
        {{ block.settings.tab_3_label }}
        <span class="pit-underline"></span>
      </button>
    </div>

    <div class="pit-panels">
      
      <div id="panel-1-{{ block.id }}" class="pit-panel is-active">
        <div class="pit-copy rte">{{ block.settings.tab_1_content }}</div>
        {% if block.settings.tab_1_image != blank %}
          <div class="pit-images">
             <div class="pit-img">
                <p>With TaimaÂ® You're Guaranteed Safety.</p>
                <img src="{{ block.settings.tab_1_image | image_url: width: 600 }}" loading="lazy" width="600" height="auto">
             </div>
             <div class="pit-img pit-img--placeholder" style="background:#333;"></div>
          </div>
        {% endif %}
      </div>

      <div id="panel-2-{{ block.id }}" class="pit-panel" style="display:none;">
        <div class="pit2-media">
          {% if block.settings.tab_2_image != blank %}
            <img class="pit2-img-desktop" src="{{ block.settings.tab_2_image | image_url: width: 1200 }}" loading="lazy" width="100%" height="auto">
            <div class="pit2-mobile-scroll">
               <img class="pit2-img-mobile" src="{{ block.settings.tab_2_image | image_url: width: 800 }}" loading="lazy">
            </div>
          {% endif %}
        </div>
      </div>

      <div id="panel-3-{{ block.id }}" class="pit-panel" style="display:none;">
        <h3 class="hb-title">{{ block.settings.tab_3_heading }}</h3>
        <div class="hb-compact">
           <ul class="hb-c-list">
             {% assign content_parts = block.settings.tab_3_content | split: '<strong>' %}
             {% for part in content_parts offset:1 %}
               {% assign title = part | split: '</strong>' | first %}
               {% assign desc = part | split: '</strong>' | last | remove: '<p>' | remove: '</p>' %}
               <li class="hbci">
                 <span class="hbci-ic">
                   <svg width="18" height="18" viewBox="0 0 20 20" fill="none" stroke="currentColor"><circle cx="10" cy="10" r="8.25" stroke-width="1.5"/><path d="M6.5 10.2l2.2 2.1L13.8 7.6" stroke-width="1.5"/></svg>
                 </span>
                 <div class="hbci-text">
                   <span class="hbci-title">{{ title }}</span>
                   <span class="hbci-desc">{{ desc }}</span>
                 </div>
               </li>
             {% endfor %}
           </ul>
        </div>
      </div>

    </div>
  </div>

  <script>
    function openPitTab(evt, panelId, blockId) {
      // Hide all panels within this specific block
      var container = document.getElementById('product-info-tabs-' + blockId);
      var panels = container.getElementsByClassName("pit-panel");
      for (var i = 0; i < panels.length; i++) {
        panels[i].style.display = "none";
        panels[i].classList.remove("is-active");
      }

      // Deactivate all tabs within this specific block
      var tabs = container.getElementsByClassName("pit-tab");
      for (var i = 0; i < tabs.length; i++) {
        tabs[i].classList.remove("is-active");
        tabs[i].setAttribute("aria-selected", "false");
      }

      // Show the clicked panel and activate the clicked tab
      document.getElementById(panelId).style.display = "block";
      setTimeout(function(){ document.getElementById(panelId).classList.add("is-active"); }, 10);
      evt.currentTarget.classList.add("is-active");
      evt.currentTarget.setAttribute("aria-selected", "true");
    }
  </script>

  <style>
    /* Dynamic ID Scoping: {{ block.id }} */
    #product-info-tabs-{{ block.id }} .pit { 
      color: {{ block.settings.text_color | default: '#ffffff' }}; 
    }

    #product-info-tabs-{{ block.id }} .pit-tabs {
      display: grid; 
