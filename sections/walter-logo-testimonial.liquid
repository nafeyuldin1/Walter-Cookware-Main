{% comment %}
  Section: Logo Testimonials
  Description: Clickable logos that display associated quotes.
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} .logo-testimonials-wrapper {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: clamp(20px, 6vw, 120px);
    padding-right: clamp(20px, 6vw, 120px);
  }

  .logo-testimonials {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    flex-wrap: nowrap;
    gap: 6vw;
    text-align: left;
    max-width: 1400px;
    margin: 0 auto;
  }

  .logo-container,
  .quote-display {
    flex: 1;
    min-width: 0;
  }

  .logo-container {
    display: flex;
    justify-content: space-between; /* Use space-between to spread logos */
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    row-gap: 50px;
  }

  /* Logo Image Styling */
  .lt-logo-item {
    cursor: pointer;
    opacity: 1;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lt-logo-item.faded {
    opacity: 0.3; /* Default faded state */
  }
  
  .lt-logo-item:hover {
    opacity: 1; /* Slight hover effect */
  }

  .logo-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
  }

  .logo-image-mobile { display: none; }
  .logo-image-desktop { display: block; }

  /* Quote Styling */
  .quote-display {
    max-width: 731px;
    min-height: 120px; /* Prevent layout jump */
    display: flex;
    align-items: center;
  }

  .logo-quote {
    font-family: 'Neue Montreal', sans-serif; /* Ensure font is loaded */
    font-weight: 400;
    font-size: {{ section.settings.quote_size }}px;
    line-height: 1.3;
    letter-spacing: 0.04em;
    text-transform: capitalize;
    margin: 0;
    color: {{ section.settings.text_color }};
    transition: opacity 0.3s ease-in-out;
  }

  .lt-hidden {
    display: none;
    opacity: 0;
  }
  
  .lt-active {
    display: block;
    opacity: 1;
    animation: fadeIn 0.5s;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive */
  @media (max-width: 1100px) {
    .logo-testimonials {
      flex-direction: column;
      text-align: center;
      gap: 40px;
    }

    .logo-container {
      width: 100%;
      justify-content: space-evenly;
      margin-bottom: 20px;
    }

    .quote-display {
      max-width: 100%;
      justify-content: center;
      min-height: auto;
    }
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .logo-testimonials-wrapper {
      padding-top: {{ section.settings.padding_top | divided_by: 1.5 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 1.5 }}px;
      padding-left: 20px;
      padding-right: 20px;
    }

    .logo-image-desktop { display: none; }
    .logo-image-mobile { display: block; }

    .logo-quote {
      font-size: {{ section.settings.quote_size_mobile }}px;
    }
    
    .logo-container {
      gap: 15px; 
      justify-content: space-between;
    }
  }
</style>

<div class="logo-testimonials-wrapper">
  <div class="logo-testimonials">
    
    <div class="logo-container">
      {% for block in section.blocks %}
        <div class="lt-logo-item {% unless forloop.first %}faded{% endunless %}" 
             data-index="{{ forloop.index0 }}"
             {{ block.shopify_attributes }}>
          
          {% assign desktop_width = block.settings.logo_width %}
          {% assign mobile_width = block.settings.logo_width_mobile %}
          
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 400 }}" 
                 class="logo-image logo-image-desktop" 
                 alt="{{ block.settings.image.alt | default: 'Trusted brand logo' }}"
                 loading="lazy"
                 style="max-width: {{ desktop_width }}px;">
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'logo-image logo-image-desktop' }}
          {% endif %}

          {% assign mobile_img = block.settings.image_mobile | default: block.settings.image %}
          {% if mobile_img != blank %}
            <img src="{{ mobile_img | image_url: width: 300 }}" 
                 class="logo-image logo-image-mobile" 
                 alt="{{ mobile_img.alt | default: 'Trusted brand logo' }}"
                 loading="lazy"
                 style="max-width: {{ mobile_width }}px;">
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="quote-display">
      {% for block in section.blocks %}
        <h3 class="logo-quote {% if forloop.first %}lt-active{% else %}lt-hidden{% endif %}" 
            data-index="{{ forloop.index0 }}">
          {% if block.settings.quote != blank %}
            "{{ block.settings.quote }}"
          {% else %}
             "Add a quote in the block settings."
          {% endif %}
        </h3>
      {% endfor %}
    </div>

  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sectionId = "#shopify-section-{{ section.id }}";
    const container = document.querySelector(sectionId);
    
    if (!container) return;

    const logos = container.querySelectorAll(".lt-logo-item");
    const quotes = container.querySelectorAll(".logo-quote");

    logos.forEach((logo) => {
      logo.addEventListener("click", () => {
        const index = logo.getAttribute("data-index");

        // Logos: Fade all except clicked
        logos.forEach((l) => l.classList.add("faded"));
        logo.classList.remove("faded");

        // Quotes: Hide all, show matching
        quotes.forEach((q) => {
          q.classList.remove("lt-active");
          q.classList.add("lt-hidden");
          
          if (q.getAttribute("data-index") === index) {
            q.classList.remove("lt-hidden");
            // Small timeout to allow CSS display change before opacity transition
            setTimeout(() => {
               q.classList.add("lt-active");
            }, 10);
          }
        });
      });
    });
  });
</script>

{% schema %}
{
  "name": "Logo Testimonials",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#03231A"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ded2bc"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "quote_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Quote Size (Desktop)",
      "default": 32
    },
    {
      "type": "range",
      "id": "quote_size_mobile",
      "min": 14,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Quote Size (Mobile)",
      "default": 20
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "logo_quote",
      "name": "Logo & Quote",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo Image (Desktop)"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Logo Image (Mobile)",
          "info": "Optional. Falls back to desktop image if blank."
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 20,
          "max": 250,
          "step": 5,
          "unit": "px",
          "label": "Logo Max Width (Desktop)",
          "default": 120
        },
        {
          "type": "range",
          "id": "logo_width_mobile",
          "min": 20,
          "max": 150,
          "step": 5,
          "unit": "px",
          "label": "Logo Max Width (Mobile)",
          "default": 80
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote Text",
          "default": "This product changed my life."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Testimonials",
      "blocks": [
        { "type": "logo_quote" },
        { "type": "logo_quote" },
        { "type": "logo_quote" }
      ]
    }
  ]
}
{% endschema %}